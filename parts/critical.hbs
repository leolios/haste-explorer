<style>
    .criticalWindow {
        position: fixed;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        background: rgba(0,0,0,0.2);
        z-index: 99999;
        opacity:0;
        pointer-events: none;
        text-align:center;
        opacity:1;
        pointer-events: auto;
    }
    .criticalWindow > div {
        width: 500px;
        position: relative;
        margin: 10% auto;
        background: #fff;
        padding: 20px;
    }
</style>


<div id="critical" class="criticalWindow">
    <div>
        <h2 class="red-text" >Critical error</h2>
        {{#if error}}
            <p>{{error}}</p>
        {{else}}
            <p>However, she is unknown...</p>
        {{/if}}
    </div>
</div>
